@page
@model AutoCompanyWebApplication.Pages.DispatcherPages.EditingRouteModel
@{
	ViewData["Title"] = "Edit route";
}

@if (Model.errorMessage.Length > 0) {
    <div class = "alert alert-warning alert-dismissible fade show" role = "alert">
        <strong>@Model.errorMessage</strong>
        <button type = "button" class = "btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <div class = "row mb-3">
        <label class = "col-sm-3 col-form-label">Title</label>
        <div class = "col-sm-6">
            <input type = "text" class = "form-control" name = "title" value = "@EditingRouteModel.route.Title" autocomplete="off"/>
        </div>
    </div>
	<div class = "row mb-3">
        <label class = "col-sm-3 col-form-label">CheckOutTime</label>
        <div class = "col-sm-6">
            <input type = "text" class = "form-control" name = "checkOutTime" value = "@EditingRouteModel.route.CheckOutTime" autocomplete="off"/>
        </div>
    </div>
	<div class = "row mb-3">
        <label class = "col-sm-3 col-form-label">ArrivalTime</label>
        <div class = "col-sm-6">
            <input type = "text" class = "form-control" name = "arrivalTime" value = "@EditingRouteModel.route.ArrivalTime" autocomplete="off"/>
        </div>
    </div>
	<div class = "row mb-3">
        <label class = "col-sm-3 col-form-label">Destination</label>
        <div class = "col-sm-6">
            <input type = "text" class = "form-control" name = "destination" value = "@EditingRouteModel.route.Destination" autocomplete="off"/>
        </div>
    </div>
    <div class = "row mb-3">
        <label class = "col-sm-3 col-form-label">Vehicle</label>
        <div class = "col-sm-6">
            <br />
            <select name="vehicles">
                @foreach (var item in EditingRouteModel.vehicles)
                {
                    @if (item.Id == EditingRouteModel.route.VehicleId)
                    {
                        <option value="@item.Id" selected>@item.LicensePlate</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.LicensePlate</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class = "row mb-3">
        <label class = "col-sm-3 col-form-label">Driver</label>
        <div class = "col-sm-6">
            <br />
            <select name="drivers">
                @foreach (var item in EditingRouteModel.drivers)
                {
                    @if (item.Id == EditingRouteModel.route.DriverId)
                    {
                        <option value="@item.Id" selected>@item.Surname</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Surname</option>
                    }
                }
            </select>
        </div>
    </div>
	<div class = "row mb-3">
        <div class = "offset-sm-3 col-sm-3 d-grid">
            <button type = "submit" class="button-35">Submit</button>
        </div>
    </div>
</form>